body, html
    position relative
    padding 0
    margin 0
    min-height 100vh
    width 100%
    min-width 320px


*
    font-family "Roboto", sans-serif
    box-sizing border-box

    &:focus, &:active
        outline none !important


img, svg
    border 0
    outline none
    max-width 100%


ul,li
    margin 0
    padding 0
    list-style-type none


h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label
    margin 0
    padding 0
    text-decoration none
    -webkit-font-smoothing antialiased


ul, li
    padding 0
    margin 0
    list-style-type none
    

.container
    display flex
    
    &--outer
        flex-flow row wrap
        justify-content center
        align-items center
        width 100vw
        overflow-x hidden
        
    &--inner
        flex-flow row wrap
        justify-content flex-start
        align-items flex-start
        min-height 500px
        max-width 1200px
        
        @media screen and (max-width 999px)
            max-width 95%
            
div.text-content, div.image-content
    flex-flow column wrap
    justify-content flex-start
    align-items flex-start
    
