body, html
    position relative
    padding 0
    margin 0
    min-height 100vh
    width 100%
    min-width 320px


*
    font-family "Roboto", sans-serif
    box-sizing border-box

    &:focus, &:active
        outline none !important


img, svg
    border 0
    outline none
    max-width 100%


ul,li
    margin 0
    padding 0
    list-style-type none


h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label
    margin 0
    padding 0
    text-decoration none
    -webkit-font-smoothing antialiased


ul, li
    padding 0
    margin 0
    list-style-type none
    

.container
    display flex
    
    &--outer
        flex-flow row wrap
        justify-content center
        align-items center
        width 100vw
        overflow-x hidden
        
    &--inner
        position relative
        flex-flow row wrap
        justify-content flex-start
        align-items flex-start
        min-height 500px
        width 1280px
        max-width 1280px
        padding 100px 0
        
        @media screen and (max-width 1280px)
            max-width 100vw
            padding 50px 0
            
div.text-content, div.image-content
    flex-flow column wrap
    justify-content flex-start
    align-items flex-start
    
div.text-content
    width 95vw
    margin 0 auto
    float none
    
div.image-content
    @media screen and (max-width 750px)
        margin-top 40px
    
div.image
    background-size cover
    background-position center
    background-repeat no-repeat
    
div.absolute-background
    position absolute
    
div.logo
    left 0
    top 50px
    
    width 121px
    height 18px
    background-image url('data:image/svg+xml;base64,')
    background-size cover
    
    &.small
        background-image url('data:image/svg+xml;base64,')
        width 24px
        height 13px
        
    @media screen and (max-width 1280px)
        top 27px
        margin-left 2.5vw
        