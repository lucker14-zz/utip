div.container--outer.hero
    background-image: linear-gradient(-131deg, #FEF1F1 2%, #FFF 100%);
    div.container--inner
        position relative
        padding-bottom 200px
        
        @media screen and (max-width 1280px)
            justify-content space-between
            align-items center
            padding-bottom 50px

        div.text-content
            max-width 445px
            margin 0
            
            @media screen and (max-width 999px)
                max-width 280px
            
        div.image-content
            position absolute
            right -300px
            
            @media screen and (max-width 1280px)
                right -130px
                
                
            @media screen and (max-width 750px)
                margin-top 0px
                
            @media screen and (max-width 430px)
                position unset
                margin-top 40px

            div.image--pew
                // background-image url('assets/video.png')
                width 1137px
                height 711px

                box-shadow 0 2px 10px 0 rgba(157,139,139,0.09), 0 12px 24px 0 rgba(53,53,53,0.05)
                border-radius 4px
                
                video
                    border-radius 4px
                
                @media screen and (max-width 1280px)
                    width 70vw
                    height 43.77vw
                    
                // @media screen and (max-width 1280px)
                //     width 50vw
                //     height 35.6vw
                    
                @media screen and (max-width 430px)
                    width 90vw
                    height 56.27vw
                    